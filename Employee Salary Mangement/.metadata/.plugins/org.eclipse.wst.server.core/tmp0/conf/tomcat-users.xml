<?xml version="1.0" encoding="UTF-8"?>
<tomcat-users version="1.0"
              xmlns="http://tomcat.apache.org/xml"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://tomcat.apache.org/xml tomcat-users.xsd">

  <!-- Roles for accessing Tomcat web interfaces -->
  <role rolename="manager-gui"/>
  <role rolename="admin-gui"/>
  <role rolename="manager-script"/>
  <role rolename="manager-status"/>
  <role rolename="manager-jmx"/>

  <!-- User with access to all Tomcat admin roles -->
  <user username="admin" password="admin123" roles="manager-gui,admin-gui,manager-script,manager-status,manager-jmx"/>

</tomcat-users>
