    <script>
        // Show loading overlay on page load
        window.addEventListener('load', function() {
            document.getElementById('loadingOverlay').style.display = 'flex';
            
            setTimeout(function() {
                document.getElementById('loadingOverlay').style.display = 'none';
                loadEmployeeCount();
            }, 1000);
        });
        
        // Navigation function
        function navigateToPage(page) {
            showLoading();
            setTimeout(function() {
                window.location.href = page;
            }, 500);
        }
        
        // Show all employees
        function showAllEmployees() {
            showLoading();
            setTimeout(function() {
                window.location.href = 'emplist.jsp';
            }, 500);
        }
        
        // Show loading overlay
        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
        }
        
        // Load employee count
        function loadEmployeeCount() {
            // Simulated count animation
            let count = 0;
            const target = 124;
            const increment = target / 30;
            
            const timer = setInterval(function() {
                count += increment;
                if (count >= target) {
                    count = target;
                    clearInterval(timer);
                }
                document.getElementById('totalEmployees').textContent = Math.floor(count);
            }, 50);
        }
        
        // Show success message
        function showSuccessMessage(message) {
            const successEl = document.getElementById('successMessage');
            successEl.textContent = message;
            successEl.style.display = 'block';
            
            setTimeout(function() {
                successEl.style.display = 'none';
            }, 5000);
        }
        
        // Show error message
        function showErrorMessage(message) {
            const errorEl = document.getElementById('errorMessage');
            errorEl.textContent = message;
            errorEl.style.display = 'block';
            
            setTimeout(function() {
                errorEl.style.display = 'none';
            }, 5000);
        }
        
        // Check URL parameters for messages
        window.addEventListener('load', function() {
            const urlParams = new URLSearchParams(window.location.search);
            
            if (urlParams.get('success')) {
                setTimeout(function() {
                    showSuccessMessage(decodeURIComponent(urlParams.get('success')));
                }, 1200);
            }
            
            if (urlParams.get('error')) {
                setTimeout(function() {
                    showErrorMessage(decodeURIComponent(urlParams.get('error')));
                }, 1200);
            }
        });
    </script>
