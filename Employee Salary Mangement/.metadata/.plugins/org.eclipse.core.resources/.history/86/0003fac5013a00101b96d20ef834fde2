                        <span class="detail-value">
                            <span class="employee-gender <%= emp.getGender().toLowerCase().equals("male") ? "gender-male" : emp.getGender().toLowerCase().equals("female") ? "gender-female" : "gender-other" %>">
                                <%= emp.getGender() %>
                            </span>
                        </span>
                    </div>
                    <div class="detail-row">
